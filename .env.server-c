# Environment variables for Community Server
# Copy this file to .env in the same directory as docker-compose-server2.yml

# Minecraft Server Settings
MC_VERSION=1.21.4
MC_TYPE=FABRIC
MC_MEMORY=6G
MC_SERVER_NAME=Rivalez Community
MC_GAMEMODE=survival
MC_DIFFICULTY=hard
MC_MAX_PLAYERS=15

# Port Configuration
# Java Edition port (default: 25566)
MC_PORT=25566
# Bedrock Edition port (default: 19133)
MC_BEDROCK_PORT=19133

# Backup Settings
BACKUP_INTERVAL=24h
PRUNE_DAYS=7

# MOTD (Message of the Day)
MC_MOTD=Rivalez Community - Servidor de la Comunidad\n¡Únete y juega con otros miembros de la comunidad!
